---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import { Schema } from "astro-seo-schema";
interface Props {
  title: string;
}

const homePage = Astro.url.host;

const { title } = Astro.props;
---

<!doctype html>
<html lang="es-ES">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/PD-favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "WebSite",
        "@id": `${homePage}/#website`,
        url: `${homePage}`,
        name: "Petites Delicias",
        author: {
          "@type": "Person",
          name: "",
        },
        publisher: {
          "@type": "Person",
          name: "Petites Delicias",
          image: {
            "@type": "ImageObject",
            "@id": `${homePage}/#logo`,
            url: `${homePage}/public/logo-petites-delicias@2x.png`,
            contentUrl: `${homePage}/public/logo-petites-delicias@2x.png`,
            caption: "Petites Delicias",
            inLanguage: "es",
            width: "361",
            height: "85",
          },
        },
        inLanguage: "es",
      }}
    />

    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
      defer></script>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
